{
  "expo": {
    "name": "motorista-fretes",
    "slug": "motorista-fretes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "motoristafretes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-notifications"
    ],

    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#ea580c"
    },

    "ios": {
      "bundleIdentifier": "br.voucarregar.motoristafretes",
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Usamos o Face ID para vocÃª entrar rapidamente no app."
      }
    },

    "android": {
      "package": "br.voucarregar.motoristafretes",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "POST_NOTIFICATIONS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "fe5fc4e2-2c05-4624-957b-611c19613195"
      }
    },

    "owner": "fcomatcas"
  }
}
